{
  "name": "mishka",
  "version": "16.0.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "latest",
    "autoprefixer": "^9.7.2",
